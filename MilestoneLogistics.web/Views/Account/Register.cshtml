@model MilestoneLogistics.web.Models.ViewModels.RegisterViewModel
@{
}


<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Register
            </h1>

            <form method="post">
                <div class="mb-3">
                    <lable class="form-label">UserName</lable>
                    <input class="form-control" type="text" id="username" asp-for="UserName" required />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="mb-3">
                    <lable class="form-label">Email</lable>
                    <input class="form-control" type="email" id="email" asp-for="Email" required />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>

                <div class="mb-3">
                    <lable class="form-label">Password</lable>
                    <input class="form-control" type="password" id="password" asp-for="Password" required minlength="6" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>