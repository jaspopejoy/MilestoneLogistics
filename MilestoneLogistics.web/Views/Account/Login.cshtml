@model MilestoneLogistics.web.Models.ViewModels.LoginViewModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Login
            </h1>

            <form method="post">
                <div class="mb-3">
                    <lable class="form-label">UserName</lable>
                    <input class="form-control" type="text" id="username" asp-for="UserName" />
                </div>

                <div class="mb-3">
                    <lable class="form-label">Password</lable>
                    <input class="form-control" type="password" id="password" asp-for="Password" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Log In</button>
                </div>

                <input type="hidden" asp-for="ReturnUrl" />
            </form>
        </div>
    </div>
</div>